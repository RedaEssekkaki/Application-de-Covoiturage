<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
            <!-- flatpickr CSS -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

            <!-- flatpickr JavaScript -->
            <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

        {% endblock %}
    </head>
    <body>
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('trajet.list') }}">Trajets</a></li>
            <li><a href="{{ path('trajet.create') }}">Offrir un trajet</a></li>
            <li><a href="{{ path('reservation.list') }}">Réservations</a></li>
            <li><a href="{{ path('profile') }}">Profil</a></li>
            {% if app.user %}
                <li class="username">Bonjour, {{ app.user.prenom }}</li>
                <a class="nav-item" href="{{ path('app_logout') }}">Se déconnecter</a>
            {% else %}
                <a class="nav-item" href="{{ path('app_login') }}">Se connecter</a>
            {% endif %}
        </ul>
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
